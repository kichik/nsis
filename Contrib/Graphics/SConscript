Import('defenv')

def join(prefix, lst):
	return list(map(lambda x: '%s/%s' % (prefix, x), lst))

def dist(dir, files):
	defenv.DistributeContrib(join(dir, files), path='Graphics/%s' % dir)

dist('Checks', checks)
dist('Header', headers)
dist('Icons', icons)
dist('Wizard', wizards)
